<odoo>
    <record id="hr_attendance_theoretical_view_filter" model="ir.ui.view">
        <field name="name">hr.attendance.theoretical.time.report</field>
        <field name="model">hr.attendance.theoretical.time.report</field>
        <field
            name="inherit_id"
            ref="hr_attendance_report_theoretical_time.hr_attendance_theoretical_view_filter"
        />
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="department_id" />
            </field>
            <filter name="my" position="after">
                <separator />
                <filter name="monday" string="Monday" domain="[('week_day', '=', 1)]" />
                <filter
                    name="tuesday"
                    string="Tuesday"
                    domain="[('week_day', '=', 2)]"
                />
                <filter
                    name="wednesday"
                    string="Wednesday"
                    domain="[('week_day', '=', 3)]"
                />
                <filter
                    name="thursday"
                    string="Thursday"
                    domain="[('week_day', '=', 4)]"
                />
                <filter name="friday" string="Friday" domain="[('week_day', '=', 5)]" />
                <filter
                    name="saturday"
                    string="Saturday"
                    domain="[('week_day', '=', 6)]"
                />
                <filter name="sunday" string="Sunday" domain="[('week_day', '=', 0)]" />
                <filter
                    name="public_holiday"
                    string="Public Holiday"
                    domain="[('is_public_holiday', '=', True)]"
                />
            </filter>
        </field>
    </record>
</odoo>
