<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_open_related_partner" model="ir.actions.act_window">
        <field name="name">Related Partner</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
    </record>
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">CB HR views hr.employee.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
            <field name="job_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="view_employee_tree_delete" model="ir.ui.view">
        <field name="name">CB HR views hr.employee.tree.delete</field>
        <field name="model">hr.employee</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="cb_hr_views.view_employee_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">true</attribute>
                <attribute name="delete">true</attribute>
            </xpath>
        </field>
    </record>
    <record id="hr_kanban_view_employees" model="ir.ui.view">
        <field name="name">CB HR views hr.employee.kanban</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees" />
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
            <xpath expr="//field[@name='job_id']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='work_location']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="category_ids" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </field>
        </field>
    </record>
    <record id="hr_holidays.hr_kanban_view_employees_kanban" model="ir.ui.view">
        <field name="active" eval="False" />
    </record>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">CB HR views hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
            <xpath expr="//h1//field[@name='name']/.." position="after">
                <div class="oe_edit_only">
                    <group>
                        <field
                            name="lastname"
                            attrs="{'required': [('firstname', '=', False), ('lastname2', '=', False)]}"
                        />
                        <field
                            name="lastname2"
                            attrs="{'required': [('firstname', '=', False), ('lastname', '=', False)]}"
                        />
                        <field
                            name="firstname"
                            attrs="{'required': [('lastname2', '=', False), ('lastname', '=', False)]}"
                        />
                    </group>
                </div>
                <strong attrs="{'invisible': [('show_info', '=', False)]}">
                    <field name="today_schedule" nolabel="1" />
                </strong>
            </xpath>
            <xpath expr="//field[@name='country_id']/.." position="attributes">
                <attribute name="string">Citizenship</attribute>
            </xpath>
            <field name="address_id" position="attributes">
                <attribute name="domain">[('is_center', '=', True)]</attribute>
            </field>
            <field name="manager" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="passport_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="job_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="tz" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="address_home_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="address_home_id" position="after">
                <field
                    name="partner_id"
                    context="{'show_address': 1}"
                    string="Private Address"
                    options='{"always_reload": True, "highlight_first_line": True, "no_open": True}'
                />
            </field>
            <xpath
                expr="//page[@name='personal_information']//field[@name='bank_account_id']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="identification_id" position="after">
                <field name="identification_id_expiration" />
            </field>
            <field name="coach_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath
                expr="//page[@name='personal_information']/group/group[2]/div"
                position="replace"
            />
            <field name="emergency_phone" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath
                expr="//page[@name='personal_information']/group/group[last()]"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='google_drive_link']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='additional_note']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='toggle_active']" position="before">
                <field name="partner_id" invisible="1" />
                <button
                    name="action_open_related_partner"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-user-tie"
                    attrs="{'invisible': ['|', ('partner_id', '=', False), ('show_info', '=', False)]}"
                >
                    <div class="o_stat_info">
                        <span class="o_stat_text">Related</span>
                        <span class="o_stat_text">Partner</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='address_home_id']/.." position="inside">
                <field name="personal_email" widget="email" />
                <field name="personal_phone" />
                <field name="personal_mobile" />
            </xpath>
            <xpath expr="//field[@name='company_id']/.." position="after">
                <group string="Bank Account">
                    <field
                        name="bank_account_id"
                        context="{'default_partner_id': partner_id}"
                        domain="[('partner_id', '=', partner_id)]"
                        attrs="{'invisible': [('bank_account_id', '=', False)]}"
                    />
                    <button
                        name="%(wizard_bank_account_employee_act_window)d"
                        string="New Bank Account"
                        type="action"
                        class="btn-primary"
                        groups="hr.group_hr_manager"
                    />
                </group>
            </xpath>
            <!-- Remove officer group and show depending on 'show_info' -->
            <page name="personal_information" position="before">
                <field name="show_info" invisible="1" />
            </page>
            <page name="personal_information" position="attributes">
                <attribute name="groups">base.group_user</attribute>
                <attribute
                    name="attrs"
                >{'invisible': [('show_info', '=', False)]}</attribute>
            </page>
            <page name="hr_settings" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </page>
            <field name="job_id" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </field>
            <field name="category_ids" position="attributes">
                <attribute name="groups">hr.group_hr_manager</attribute>
            </field>
            <field name="visa_no" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="mobile_phone" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="km_home_work" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="permit_no" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="visa_expire" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="vehicle" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="visa_expire" position="after">
                <field string="Social Security Number" name="ssnid" />
            </field>
            <field name="user_id" position="after">
                <field name="personal_identifier" />
                <field
                    name="locker"
                    attrs="{'invisible': [('show_info', '=', False)]}"
                />
            </field>
            <field name="resource_calendar_id" position="before">
                <field
                    name="working_hours_type"
                    attrs="{'invisible': [('show_info', '=', False)]}"
                />
                <label
                    for="percentage_of_reduction"
                    string="Percentage of reduction"
                    attrs="{'invisible': ['|', ('show_info', '=', False), ('working_hours_type','!=','reduced')]}"
                />
                <div
                    attrs="{'invisible': ['|', ('show_info', '=', False), ('working_hours_type','!=','reduced')]}"
                >
                    <field name="percentage_of_reduction" />
                    %
                </div>
            </field>
            <xpath expr="//field[@name='leaves_count']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[hasclass('oe_chatter')]" position="replace" />
            <page name="hr_settings" position="inside">
                <group
                    name="prl"
                    string="Prevention of Occupational Hazards"
                    invisible="1"
                >
                    <group>
                        <field name="prl_ids" nolabel="1">
                            <tree editable="top">
                                <field name="name" />
                                <field name="prl_date" />
                                <field name="notes" />
                            </tree>
                        </field>
                    </group>
                </group>
            </page>
        </field>
    </record>
    <record id="view_employee_form_manager" model="ir.ui.view">
        <field name="name">CB HR views hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="view_employee_form" />
        <field name="groups_id" eval="[(4, ref('hr.group_hr_manager'))]" />
        <field name="arch" type="xml">
            <sheet position="after">
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </sheet>
        </field>
    </record>
    <record id="view_employee_filter" model="ir.ui.view">
        <field name="name">CB HR views hr.employee.filter</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter" />
        <field name="arch" type="xml">
            <field name="job_id" position="after">
                <filter
                    name="id_expired"
                    string="ID Expired"
                    groups="hr.group_hr_manager"
                    domain="[('identification_id_expiration', '&lt;=', datetime.date.today().strftime('%Y-%m-%d'))]"
                />
                <separator />
                <field name="personal_identifier" groups="hr.group_hr_manager" />
            </field>
        </field>
    </record>
    <record
        id="hr_attendance.view_employee_form_inherit_hr_attendance"
        model="ir.ui.view"
    >
        <field name="groups_id" eval="[(4,ref('hr_attendance.group_hr_attendance'))]" />
    </record>
    <record id="hr.menu_view_employee_category_form" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('hr.group_hr_manager')])]" />
    </record>
    <record
        id="hr.hr_employee_action_subordinate_hierachy"
        model="ir.actions.act_window"
    >
        <field name="groups_id" eval="[(6, 0, [ref('base.group_no_one')])]" />
    </record>
    <record
        id="hr_holidays.action_hr_holidays_summary_employee"
        model="ir.actions.act_window"
    >
        <field name="groups_id" eval="[(6, 0, [ref('base.group_no_one')])]" />
    </record>
    <record id="view_employee_form_inherit_hr_attendance" model="ir.ui.view">
        <field name="name">CB HR Views hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field
            name="inherit_id"
            ref="hr_attendance.view_employee_form_inherit_hr_attendance"
        />
        <field name="arch" type="xml">
            <xpath expr="//button[1]" position="before">
                <field name="show_info" invisible="1" />
            </xpath>
            <xpath expr="//button[1]" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('show_info', '=', False)]}</attribute>
            </xpath>
            <field name="barcode" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="pin" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="manual_attendance" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="view_employee_form_inherit_hr_employee_service" model="ir.ui.view">
        <field name="name">CB HR Views hr.employee.form service</field>
        <field name="model">hr.employee</field>
        <field
            name="inherit_id"
            ref="hr_employee_service.view_employee_form_inherit_extension"
        />
        <field name="arch" type="xml">
            <field name="service_hire_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="view_employee_form_inherit_hr_autoclose_attendance" model="ir.ui.view">
        <field name="name">CB HR Views hr.employee.form autoclose attendance</field>
        <field name="model">hr.employee</field>
        <field
            name="inherit_id"
            ref="hr_attendance_autoclose.view_employee_form_inherit_hr_attendance"
        />
        <field name="arch" type="xml">
            <field name="no_autoclose" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record
        id="view_employee_form_inherit_hr_attendance_theoretical"
        model="ir.ui.view"
    >
        <field name="name">CB HR Views hr.employee.form autoclose attendance</field>
        <field name="model">hr.employee</field>
        <field
            name="inherit_id"
            ref="hr_attendance_report_theoretical_time.view_employee_form_inherit_hr_attendance"
        />
        <field name="arch" type="xml">
            <field name="theoretical_hours_start_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">	hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_employee_relative.hr_employee_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='relative_ids']/.." position="before">
                <field name="show_info" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='relative_ids']/.." position="attributes">
                <attribute name="groups">base.group_user</attribute>
                <attribute
                    name="attrs"
                >{'invisible': [('show_info', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="hr_employee_calendar_planning" model="ir.ui.view">
        <field name="name">	hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field
            name="inherit_id"
            ref="hr_employee_calendar_planning.view_employee_form"
        />
        <field name="arch" type="xml">
            <field name="calendar_ids" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('show_info', '=', False)]}</attribute>
            </field>
            <field name="calendar_id" position="attributes">
                <attribute
                    name="options"
                >{'no_create': True, 'no_open': True}</attribute>
                <attribute name="domain">[('not_archived', '=', True)]</attribute>
            </field>
        </field>
    </record>
    <record id="hr_employee_hide_medical_date" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2" />
        <field name="arch" type="xml">
            <field name="medic_exam" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="medic_exam" position="before">
                <field name="contract_id" />
                <field name="contract_type_id" />
                <field name="laboral_category_id" />
                <field name="working_hours_type" />
                <field name="turn" />
                <field name="transport_plus" />
                <field name="contract_notes" />
            </field>
        </field>
    </record>
</odoo>
