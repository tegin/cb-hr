<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hr_job_tree" model="ir.ui.view">
        <field name="name">hr.job.tree</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_tree" />
        <field name="arch" type="xml">
            <field name="no_of_hired_employee" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="view_hr_job_form" model="ir.ui.view">
        <field name="name">hr.job.form</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form" />
        <field name="arch" type="xml">
            <field name="company_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="open_module_tree_job_position" model="ir.actions.act_window">
        <field name="name">Job Positions</field>
        <field name="res_model">hr.job</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to create a job position.
          </p>
        </field>
    </record>
    <menuitem
        action="open_module_tree_job_position"
        id="menu_hr_job_root"
        parent="hr.menu_hr_root"
        sequence="91"
        groups="hr.group_hr_manager"
    />
    <!-- Keep the menu disabled for now... -->
    <record id="menu_hr_job_root" model="ir.ui.menu">
        <field name="active" eval="False" />
    </record>
</odoo>
