<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="_assets_backend_helpers" inherit_id="web._assets_backend_helpers">
        <xpath expr="//link" position="before">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/cb_departments_chart/static/src/scss/variables.scss"
            />
        </xpath>
    </template>
    <template
        id="assets_backend"
        name="hr_department_chart_assets_backend"
        inherit_id="web.assets_backend"
    >
        <xpath expr="." position="inside">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/cb_departments_chart/static/src/scss/hr_department_chart.scss"
            />
            <script
                type="text/javascript"
                src="/cb_departments_chart/static/src/js/hr_department_chart.js"
            />
        </xpath>
    </template>
</odoo>
