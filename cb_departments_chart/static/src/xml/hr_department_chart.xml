<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="hr_department_chart_department">
        <div
            t-attf-class="o_org_chart_entry o_org_chart_entry_#{department_type} media"
        >
            <t t-set="is_self" t-value="department_type == 'self'" />
            <div class="o_media_left">
                <!-- NOTE: Since by the default on not squared images odoo add white borders,
                    use bg-images to get a clean and centred images -->
                <a
                    t-if="! is_self"
                    class="o_media_object rounded-circle o_department_redirect"
                    t-att-style="'background-image:url(\'/web/image/hr.department/' + department.id + '/image/\')'"
                    t-att-alt="department.name"
                    t-att-data-department-id="department.id"
                    t-att-href="department.link"
                />
                <div
                    t-if="is_self"
                    class="o_media_object rounded-circle"
                    t-att-style="'background-image:url(\'/web/image/hr.department/' + department.id + '/image/\')'"
                />
            </div>
            <div class="media-body">
                <span
                    t-if="department.indirect_sub_count &gt; 0"
                    class="badge badge-pill"
                    tabindex="0"
                    data-trigger="focus"
                    t-att-data-emp-name="department.name"
                    t-att-data-emp-id="department.id"
                    t-att-data-emp-dir-subs="department.direct_sub_count"
                    t-att-data-emp-ind-subs="department.indirect_sub_count"
                    data-toggle="popover"
                >
                    <t t-esc="department.indirect_sub_count" />
                </span>
                <t t-if="!is_self">
                    <a
                        t-att-href="department.link"
                        class="o_department_redirect"
                        t-att-data-department-id="department.id"
                    >
                        <h5 class="o_media_heading">
                            <b>
                                <t t-esc="department.name" />
                            </b>
                        </h5>
                        <strong>
                            <t t-esc="department.manager_name" />
                        </strong>
                    </a>
                </t>
                <t t-if="is_self">
                    <h5 class="o_media_heading">
                        <b>
                            <t t-esc="department.name" />
                        </b>
                    </h5>
                    <strong>
                        <t t-esc="department.manager_name" />
                    </strong>
                </t>
            </div>
        </div>
    </t>
    <t t-name="hr_department_chart">
        <t t-set="emp_count" t-value="0" />
        <div t-if='departments.length &gt; 0' class="o_org_chart_group_up">
            <t t-if='departments_more'>
                <div class="o_org_chart_entry o_org_chart_more media">
                    <div class="o_media_left">
                        <a
                            class="text-center o_department_redirect"
                            t-att-href="departments[0].link"
                            t-att-data-department-id="departments[0].id"
                        >
                            <i
                                t-attf-class="fa fa-angle-double-up"
                                role="img"
                                aria-label="More departments"
                                title="More departments"
                            />
                        </a>
                    </div>
                </div>
            </t>
            <t t-foreach="departments" t-as="department">
                <t t-set="emp_count" t-value="emp_count + 1" />
                <t t-call="hr_department_chart_department">
                    <t t-set="department_type" t-value="'manager'" />
                </t>
            </t>
        </div>
        <t
            t-if="children.length || departments.length"
            t-call="hr_department_chart_department"
        >
            <t t-set="department_type" t-value="'self'" />
            <t t-set="department" t-value="self" />
        </t>
        <t t-if="!children.length &amp;&amp; !departments.length">
            <div class="alert alert-info" role="alert">
                <p>
                    <b>No hierarchy position.</b>
                </p>
                <p>This department has no parent department or subordinate.</p>
                <p>In order to get an organigram, set a manager and save the record.</p>
            </div>
        </t>
        <div t-if="children.length" class="o_org_chart_group_down">
            <t t-foreach="children" t-as="department">
                <t t-set="emp_count" t-value="emp_count + 1" />
                <t t-if="emp_count &lt; 8">
                    <t t-call="hr_department_chart_department">
                        <t t-set="department_type" t-value="'sub'" />
                    </t>
                </t>
            </t>
            <t t-if="(children.length + departments.length) &gt; 7">
                <div class="o_org_chart_entry o_org_chart_more media">
                    <div class="o_media_left">
                        <a
                            href="#"
                            t-att-data-department-id="self.id"
                            t-att-data-department-name="self.name"
                            class="o_org_chart_show_more text-center o_department_sub_redirect"
                        >&#8230;</a>
                    </div>
                </div>
            </t>
        </div>
    </t>
    <t t-name="hr_orgchart_emp_popover">
        <div class="popover o_org_chart_popup" role="tooltip">
            <div class="arrow" />
            <h3 class="popover-header" />
            <div class="popover-body" />
        </div>
    </t>
    <t t-name="hr_orgchart_emp_popover_content">
        <table class="table table-sm">
            <thead>
                <td class="text-right">
                    <t t-esc="department.direct_sub_count" />
                </td>
                <td>
                    <a
                        href="#"
                        class="o_department_sub_redirect"
                        data-type='direct'
                        t-att-data-department-name="department.name"
                        t-att-data-department-id="department.id"
                    >
                        <b>Direct subordinates</b>
                    </a>
                </td>
            </thead>
            <tbody>
                <tr>
                    <td class="text-right">
                        <t
                            t-esc="department.indirect_sub_count - department.direct_sub_count"
                        />
                    </td>
                    <td>
                        <a
                            href="#"
                            class="o_department_sub_redirect"
                            data-type='indirect'
                            t-att-data-department-name="department.name"
                            t-att-data-department-id="department.id"
                        >
                            Indirect subordinates</a>
                    </td>
                </tr>
                <tr>
                    <td class="text-right">
                        <t t-esc="department.indirect_sub_count" />
                    </td>
                    <td>
                        <a
                            href="#"
                            class="o_department_sub_redirect"
                            data-type='total'
                            t-att-data-department-name="department.name"
                            t-att-data-department-id="department.id"
                        >
                            Total</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </t>
    <t t-name="hr_orgchart_emp_popover_title">
        <div>
            <span
                t-att-style='"background-image:url(\"/web/image/hr.department/" + department.id + "/image/\")"'
            />
            <a
                href="#"
                class="float-right o_department_redirect"
                t-att-data-department-id="department.id"
            >
                <i
                    class="fa fa-external-link"
                    role="img"
                    aria-label='Redirect'
                    title="Redirect"
                />
            </a>
            <b>
                <t t-esc="department.name" />
            </b>
        </div>
    </t>
</templates>
